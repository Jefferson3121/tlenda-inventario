<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %logger{36} - %msg%n%ex{full}</pattern>
        </encoder>
    </appender>

    <!-- Niveles de log especÃ­ficos -->
    <logger name="com.tienda" level="DEBUG"/> <!-- Para tus clases -->
    <logger name="org.postgresql" level="DEBUG"/> <!-- Para PostgreSQL -->

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>